{
    "name": "social-platform",
    "version": "1.0.0",
    "description": "Social platform with model subscriptions and real-time chat",
    "main": "server/index.js",
    "scripts": {
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "server": "nodemon server/index.js",
        "client": "cd client && npm run serve",
        "build": "cd client && npm run build",
        "install-all": "npm install && cd client && npm install",
        "seed": "node server/seed.js"
    },
    "prisma": {
        "seed": "node ./prisma/seed.js"
    },
    "dependencies": {
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.2",
        "multer": "^1.4.5-lts.1",
        "minio": "^7.1.3",
        "socket.io": "^4.7.4",
        "prisma": "^5.7.1",
        "@prisma/client": "^5.7.1",
        "dotenv": "^16.3.1",
        "express-rate-limit": "^7.1.5",
        "express-validator": "^7.0.1"
    },
    "devDependencies": {
        "nodemon": "^3.0.2",
        "concurrently": "^8.2.2"
    },
    "keywords": [
        "social",
        "platform",
        "subscription",
        "chat",
        "models"
    ],
    "author": "Your Name",
    "license": "MIT"
}